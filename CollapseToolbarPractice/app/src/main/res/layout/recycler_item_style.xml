<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_pointshop_item_white">

    <ImageView
        android:id="@+id/signImage"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/textSignName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="피츠맥주(355ml)"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/textSignLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="500P"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/shopItemStockTxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="재고 : 0개"
        android:textSize="12dp"

        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_pointshop_item_buy"
            android:layout_gravity="bottom|center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매하기"
            android:layout_gravity="center"/>

    </FrameLayout>



</LinearLayout>